<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wen.dao.UserDao">
    <insert id="reg" parameterType="org.wen.entity.User">
        insert into user (name,password) values(#{name},#{pwd})
    </insert>
    <select id="login" parameterType="org.wen.entity.User" resultType="org.wen.entity.User">
        select id,name from user u where u.name = #{name} and u.password = #{pwd}
    </select>
    <select id="find" parameterType="map" resultType="org.wen.entity.User">
        select id,name,password as 'pwd' from user u <include refid="user_search"/> limit #{page},#{rows}
    </select>
    <select id="count" parameterType="map" resultType="long">
        select count(*) from user u
    </select>
    <sql id="user_search">
        <where>
            <if test="name != null and name != ''">
                and u.name like '%'||#{name}||'%'
            </if>
            <!-- '%'||#{name}||'%' -->
        </where>
    </sql>
</mapper>